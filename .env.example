# =============================================================================
# Environment Variables for Local Development
# =============================================================================
# Copy this file to .env and fill in the values
# This file is used by docker-compose.yml for local development
#
# DO NOT commit .env to git (it's in .gitignore)
# =============================================================================

# --- Database Configuration ---
# These are used by the local PostgreSQL container
DB_NAME=taylorlearnsblog
DB_USER=taylorlearns
DB_PASSWORD=local_dev_password_change_me

# --- Django Configuration ---
# Generate a secure secret key:
# python -c "import secrets; print(secrets.token_urlsafe(50))"
DJANGO_SECRET=your_local_secret_key_here

# Debug mode (always False in production, True for local development)
DJANGO_DEBUG=True

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF trusted origins (comma-separated, include protocol)
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# --- Optional External Services (leave empty for local dev) ---
CLOUDFLARE_EMAIL=
CLOUDFLARE_TOKEN=
CLOUDFLARE_ZONE_ID=
SENTRY_DSN=
SCREENSHOT_SECRET=
